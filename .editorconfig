# editorconfig.org
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
indent_style = space

[{resources,public,tests}/**.{js,css,less}]
indent_size = 4

[{**,!node_modules/**,!vendor/**}.php]
insert_final_newline = true
indent_size = 4

[*.{json,yml}]
indent_size = 2

[*.{xml,js}]
indent_size = 4
